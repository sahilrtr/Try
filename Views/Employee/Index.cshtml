@model IEnumerable<Try.Models.ViewModel.EmployeeViewModel>
    <a asp-action="Create" asp-controller="Employee" class="btn btn-info">Create Product</a>
    <a asp-action="AddDepartment" asp-controller="Employee" class="btn btn-info">Add Department</a>
    <table class="table table-bordered">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Gender</th>
            <th>IsActive</th>
            <th>Category</th>
            <th>Description</th>
            <th>Action</th>
        </tr>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Id</td>
                <td>@c.Name</td>
                <td>@c.Email</td>
                <td>@c.Gender</td>
                <td>@c.IsActive</td>
                <td>@c.DName</td>
                <td>@c.Description</td>
                <td>
                    <a asp-action="Delete" asp-route-id="@c.Id" class="btn btn-danger">Delete</a>

                    <a asp-action="Update" asp-route-id="@c.Id" class="btn btn-danger">Update</a>
                </td>
            </tr>
        }
    </table>